generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  username      String   @unique
  password      String   // Hashed password
  role          UserRole
  fullName      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model VehicleType {
  id           Int          @id @default(autoincrement())
  name         String       @unique
  fee          Float
  goodsEntries GoodsEntry[]
  passPackages PassPackage[]
}

model PassPackage {
  id            String   @id @default(cuid())
  name          String
  entries       Int      // Number of entries (e.g., 10)
  price         Float    // Discounted price
  discount      Float    // Discount percentage
  vehicleTypeId Int
  vehicleType   VehicleType @relation(fields: [vehicleTypeId], references: [id])
  createdAt     DateTime @default(now())
  purchases     PassPurchase[]
}

model PassPurchase {
  id              String   @id @default(cuid())
  residentName    String
  residentEmail   String?
  residentPhone   String?
  passPackageId   String
  passPackage     PassPackage @relation(fields: [passPackageId], references: [id])
  remainingEntries Int
  paymentStatus   PaymentStatus @default(PENDING)
  paymentReference String @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  entries         GoodsEntry[]
}

model GoodsEntry {
  id                   String            @id @default(cuid())
  residentName         String
  residentEmail        String?
  residentPhone        String?
  vendorCompany        String
  address              String
  vehiclePlateNumber   String
  natureOfGoods        String
  entryDate            DateTime
  paymentStatus        PaymentStatus     @default(PENDING)
  paymentReference     String            @unique
  qrCode               String?           @unique
  passStatus           PassStatus        @default(VALID)
  expiresAt            DateTime
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  vehicleTypeId        Int
  vehicleType          VehicleType       @relation(fields: [vehicleTypeId], references: [id])
  verificationLogs     VerificationLog[]
  passPurchaseId       String?
  passPurchase         PassPurchase?     @relation(fields: [passPurchaseId], references: [id])
}

model VerificationLog {
  id               Int      @id @default(autoincrement())
  verifiedAt       DateTime @default(now())
  status           String // e.g., "ALLOWED", "DENIED"
  notes            String?
  goodsEntryId     String
  goodsEntry       GoodsEntry @relation(fields: [goodsEntryId], references: [id])
  securityAgent    String // Identifier for the security agent
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum PassStatus {
  VALID
  EXPIRED
  USED
}

enum UserRole {
  ADMIN
  SECURITY
}

